@font-face 
  font-family: 'SourceSansPro'
  src: url('./fonts/SourceSansPro.woff2') format('woff2')
  url('./fonts/SourceSansPro.woff') format('woff')
  url('./fonts/SourceSansPro.ttf') format('truetype') 
  url('./fonts/SourceSansPro.svg') format('svg')
  font-weight: normal
  font-style: normal

white-color = #FFFFFF
title-text-color = #4F4F4F
green-color = #4EB7A8
green-shadow-color = #28A290
green-text-color = #45AC9D

@media only screen and (max-width: 319px)
    html
        font-size: 7px
        
@media only screen and (min-width: 320px) and (max-width: 639px)
    html
        font-size: 8px
        
@media only screen and (min-width: 640px) and (max-width: 799px)
    html
        font-size: 10px
        
@media only screen and (min-width: 800px) and (max-width: 1023px)
    html
        font-size: 11px

@media only screen and (min-width: 1024px) and (max-width: 1279px)
    html
        font-size: 12px
        
@media only screen and (min-width: 1280px) and (max-width: 1679px)
    html
        font-size: 13px

@media only screen and (min-width: 1680px) and (max-width: 1919px)
    html
        font-size: 14px

@media only screen and (min-width: 1920px)
    html
        font-size: 15px

body
    font: 1.2rem SourceSansPro
    background-color: white-color
    color: title-text-color
    
.nameOfGame
    text-align: center

.buttons-container
    display: grid
    grid-template-columns: 25% 4rem 1rem 4rem 1rem 8rem 1rem 8rem 1rem 8rem 1rem 8rem 25%
    grid-template-rows: 3rem 2.5rem auto
    grid-template-areas: ". labelWidth . labelHeight .  labelSpeed . . . . . . ." ". widthField . heightField . rangeSpeed . newGameButton . startButton . pauseButton ."
    text-align: center

.labelWidth
    grid-area: labelWidth

.widthField
    grid-area: widthField

.labelHeight
    grid-area: labelHeight

.heightField
    grid-area: heightField

.labelSpeed
    grid-area: labelSpeed

.rangeSpeed
    grid-area: rangeSpeed

.newGameButton
    grid-area: newGameButton

.startButton
    grid-area: startButton

.pauseButton
    grid-area: pauseButton

.button
  height: 100%
  border-radius: 0.3rem
  font-size: 1rem  
  border: solid 0.1rem green-color
  box-shadow: 0 -0.3rem green-shadow-color inset
  background-color: white-color
  color: green-text-color
  text-transform: uppercase
  cursor: pointer
  outline: none
  &:hover
    background-color: green-color
    color: white-color
    border: none
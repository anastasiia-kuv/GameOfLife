@font-face 
  font-family: 'source-sans-pro'
  src: url('./fonts/source-sans-pro.woff2') format('woff2')
  url('./fonts/source-sans-pro.woff') format('woff')
  url('./fonts/source-sans-pro.ttf') format('truetype') 
  url('./fonts/source-sans-pro.svg') format('svg')
  font-weight: normal
  font-style: normal

white-color = #FFFFFF
title-text-color = #4F4F4F
green-color = #4EB7A8
green-shadow-color = #28A290
green-text-color = #45AC9D

@media only screen and (max-width: 319px)
    html
        font-size: 7px
        
@media only screen and (min-width: 320px) and (max-width: 639px)
    html
        font-size: 8px
        
@media only screen and (min-width: 640px) and (max-width: 799px)
    html
        font-size: 10px
        
@media only screen and (min-width: 800px) and (max-width: 1023px)
    html
        font-size: 11px

@media only screen and (min-width: 1024px) and (max-width: 1279px)
    html
        font-size: 12px
        
@media only screen and (min-width: 1280px) and (max-width: 1679px)
    html
        font-size: 13px

@media only screen and (min-width: 1680px) and (max-width: 1919px)
    html
        font-size: 14px

@media only screen and (min-width: 1920px)
    html
        font-size: 15px

body
    font: 1.2rem source-sans-pro
    background-color: white-color
    color: title-text-color
    
.name-of-game
    text-align: center
    text-transform: uppercase

.control-elements
    display: grid
    grid-template-columns: 30% 4rem 1rem 4rem 1rem 8rem 1rem 8rem 1rem 8rem 1rem 8rem 25%
    grid-template-rows: 3rem auto
    grid-template-areas: ". width . height .  speed . new-game-button . start-button . pause-button ."
    text-align: center
    align-items: end

    .width
        grid-area: width
        display: grid
        grid-template-columns: 4rem
        grid-template-rows: 1rem 2rem
        grid-row-gap: 1rem
        grid-template-areas: "label-width" "width-field"

        .label-width
            grid-area: label-width

        .width-field
            grid-area: width-field

    .height
        grid-area: height
        display: grid
        grid-template-columns: 4rem
        grid-template-rows: 1rem 2rem
        grid-row-gap: 1rem
        grid-template-areas: "label-height" "height-field"

        .label-height
            grid-area: label-height

        .height-field
            grid-area: height-field

    .speed
        grid-area: speed
        display: grid
        grid-template-columns: 8rem
        grid-template-rows: 1rem 2rem
        grid-row-gap: 1rem
        grid-template-areas: "label-speed" "range-speed"

        .label-speed
            grid-area: label-speed

        .range-speed
            grid-area: range-speed

    .label
        text-transform: capitalize

    .new-game-button
        grid-area: new-game-button

    .start-button
        grid-area: start-button

    .pause-button
        grid-area: pause-button

    .button
        height: 90%
        border-radius: 0.3rem
        font-size: 1rem  
        border: solid 0.1rem green-color
        box-shadow: 0 -0.3rem green-shadow-color inset
        background-color: white-color
        color: green-text-color
        text-transform: uppercase
        cursor: pointer
        outline: none
        &:hover
            background-color: green-color
            color: white-color
            border: none

.canvas
    border: solid 0.3rem green-color
    margin-top: 5%
    margin-left: auto
    margin-right: auto
    display: block